<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
    http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">
	<persistence-unit name="db">
		<properties>
			<!-- this is overriden by my EntityManagerFactory at runtime -->
			<!-- note that this file (with the db persistence unit) must exist for the override to work -->
		</properties>
	</persistence-unit>
	<persistence-unit name="simple" >
		<class>simple.impl.CustomerImpl</class>
		<class>simple.impl.EmailImpl</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect" />
			<property name="hibernate.hbm2ddl.auto" value="create-drop" />
			<property name="hibernate.connection.driver_class" value="org.hsqldb.jdbcDriver" />
			<property name="hibernate.connection.url" value="jdbc:hsqldb:mem:simple" />
			<property name="hibernate.connection.pool_size" value= "1"/>
			<!-- <property name="hibernate.show_sql" value="true"/>  -->
			<property name="hibernate.format_sql" value="true"/>
		</properties>
	</persistence-unit>
	<persistence-unit name="simple-derby" >
		<class>simple.impl.CustomerImpl</class>
		<class>simple.impl.EmailImpl</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.DerbyDialect" />
			<property name="hibernate.hbm2ddl.auto" value="create" />
			<property name="hibernate.connection.driver_class" value="org.apache.derby.jdbc.EmbeddedDriver" />
			<property name="hibernate.connection.url" value="jdbc:derby:temp/db-simple;create=true" />
			<property name="hibernate.connection.pool_size" value= "5"/>
			<property name="hibernate.show_sql" value="true"/>
			<property name="hibernate.format_sql" value="true"/>
		</properties>
	</persistence-unit>
	<persistence-unit name="tv">
		<class>tv.impl.ChannelImpl</class>
		<class>tv.impl.RecordingImpl</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect" />
			<property name="hibernate.hbm2ddl.auto" value="create-drop" />
			<property name="hibernate.connection.driver_class" value="org.hsqldb.jdbcDriver" />
			<property name="hibernate.connection.url" value="jdbc:hsqldb:mem:tv" />
			<property name="hibernate.connection.pool_size" value= "1"/>
			<!-- <property name="hibernate.show_sql" value="true"/>  -->
			<property name="hibernate.format_sql" value="true"/>
		</properties>
	</persistence-unit>
	<persistence-unit name="self">
		<class>self.impl.AssociationImpl</class>
		<class>self.impl.AssociationEndSecondaryImpl</class>
		<class>self.impl.AssociationEndPrimaryImpl</class>
		<class>self.impl.AssociationClassImpl</class>
		<class>self.impl.NonAssociationClassImpl</class>
		<class>self.impl.SpecializationGroupImpl</class>
		<class>self.impl.AbstractClassImpl</class>
		<class>self.impl.ConcreteClassImpl</class>
		<class>self.impl.ClazzImpl</class>
		<class>self.impl.AssociationEndImpl</class>
		<class>self.impl.PkgImpl</class>
		<class>self.impl.StateMachineImpl</class>
		<class>self.impl.TransitionImpl</class>
		<class>self.impl.InitialStateImpl</class>
		<class>self.impl.FromStateImpl</class>
		<class>self.impl.TerminatingStateImpl</class>
		<class>self.impl.StateImpl</class>
		<class>self.impl.EventImpl</class>
		<class>self.impl.CallEventImpl</class>
		<class>self.impl.TimerEventImpl</class>
		<class>self.impl.ChangeEventImpl</class>
		<class>self.impl.SignalEventImpl</class>
		<class>self.impl.IdentifierImpl</class>
		<class>self.impl.AttributeImpl</class>
		<class>self.impl.OperationImpl</class>
		<class>self.impl.OperationSignatureImpl</class>
		<class>self.impl.ParameterImpl</class>
		<class>self.impl.DataTypeImpl</class>
		<class>self.impl.PrimitiveTypeImpl</class>
		<class>self.impl.FreeTypeImpl</class>
		<class>self.impl.AttributeNormalImpl</class>
		<class>self.impl.AttributeReferentialImpl</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect" />
			<property name="hibernate.hbm2ddl.auto" value="create-drop" />
			<property name="hibernate.connection.driver_class" value="org.hsqldb.jdbcDriver" />
			<property name="hibernate.connection.url" value="jdbc:hsqldb:mem:self" />
			<property name="hibernate.connection.pool_size" value= "1"/>
			<!-- <property name="hibernate.show_sql" value="true"/>  -->
			<property name="hibernate.format_sql" value="true"/>
		</properties>
	</persistence-unit>
</persistence>